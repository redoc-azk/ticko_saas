{% extends 'base.html.twig' %}

{% block title %}Connexion - Ticko{% endblock %}

{% block body_class %}
    class="error-body no-top" style="background-color: grey !important;"
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row login-container animated fadeInUp">
            <div class="col-md-7 col-md-offset-2 tiles white no-padding">
                <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
                    <h2 class="normal">
                        Ticko - Se connecter
                    </h2>
                </div>
                <div class="tiles grey p-t-20 p-b-20 no-margin text-black tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tab_login">
                        <form class="animated fadeIn validate" id="" name="" action="{{ path('app_login') }}" method="post">
                            <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="login_username" name="_username" value="{{ last_username }}" placeholder="Adresse mail" type="email" required>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <input class="form-control" id="login_pass" name="_password" placeholder="Mot de passe" type="password" required>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="row p-t-10 m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                                <div class="control-group  col-md-10">
                                    <div class="checkbox checkbox check-success">
                                        <a href="#">Mot de passe oubli√© ?</a>&nbsp;&nbsp;
                                        <input type="checkbox" id="checkbox1" value="1">
                                        <label for="checkbox1">Se souvenir de moi</label>
                                    </div>
                                </div>
                                <div class="control-group col-md-2 pull-right">
                                    <button class="btn btn-primary btn-cons pull-right" type="submit">Se connecter</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
